%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: {class: 'form-horizontal'} do |f|
        %header
          %h1 Register
        %fieldset
          .form-group
            .col-sm-6
              = f.email_field :email_address, class: 'form-control'
          .form-group
            .col-sm-6
              = f.password_field :password, label: 'Password', class: 'form-control'
          .form-group
            .col-sm-6
              = f.password_field :password_confirmation, label: 'Confirm Password', class: 'form-control'
          .form-group
            .col-sm-6
              = f.text_field :full_name, class: 'form-control'
              = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{Rails.configuration.stripe[:publishable_key]}" data-description="MyFliX Sign Up fee" data-amount="999" data-currency="gbp")
