%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @invitation, class: :invite do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            .row
              .col-sm-4
                = f.text_field :full_name, label: "Friend's Name", class: 'form-control'
          .form-group
            .row
              .col-sm-4
                = f.email_field :email_address, label: "Friend's Email Address", class: 'form-control'
          .form-group
            .row
              .col-sm-6
                = f.text_area :message, rows: 6, label: "Invitation Message", class: 'form-control', placeholder: 'Please join this really cool site!'
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
