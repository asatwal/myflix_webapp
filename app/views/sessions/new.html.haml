%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag sign_in_path, class: :sign_in do
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = label_tag :email_address
            .row
              .col-sm-4
                = email_field_tag :email_address, nil, class: 'form-control'
          .form-group
            = label_tag :password
            .row
              .col-sm-4
                = password_field_tag :password, nil, class: 'form-control'
        %fieldset.form-group.action
          = submit_tag 'Sign in', class: 'btn btn-default'
        %br
          = link_to 'Forgot password', new_forgot_password_path